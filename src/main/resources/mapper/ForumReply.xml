<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lynn.smilecollege.mapper.ForumReplyMapper">
    <select id="findByReplyId" parameterType="int" resultType="ForumReply">
            select * from forum_reply where reply_id=#{replyId}
    </select>

    <insert id="newReply" parameterType="ForumReply" >
        insert into forum_reply (topic_id,user_id,reply_content,reply_date,reply_image)
        values (#{topic_id},#{user_id},#{reply_content},#{reply_date},#{reply_image})
    </insert>

    <delete id="deleteByReplyId" parameterType="int">
        delete from forum_reply where reply_id= #{replyId}
    </delete>

</mapper>
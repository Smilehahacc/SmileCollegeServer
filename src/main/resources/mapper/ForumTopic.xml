<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lynn.smilecollege.mapper.ForumTopicMapper">
    <select id="findByForumId" parameterType="int" resultType="ForumTopic">
            select * from forum_topic where forum_id=#{forumId}
    </select>

    <insert id="newTopic" parameterType="ForumTopic" >
        insert into forum_topic (college_id,user_id,topic_id,topic_date.topic_title,topic_content)
        values (#{college_id},#{user_id},#{topic_id},#{topic_date},#{topic_title},#{topic_content})
    </insert>

    <delete id="deleteByTopicId" parameterType="int">
        delete from forum_topic where topic_id= #{topicId}
    </delete>

</mapper>